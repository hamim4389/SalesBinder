<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="30dp"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_view_list_items_name"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Name"
            android:textSize="20dp" />
        <View
            android:layout_marginLeft="101dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#0707CC" />

        <TextView
            android:id="@+id/txt_view_list_items_category"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="119dp"
            android:gravity="center"
            android:hint="Category"
            android:text="TextView" />

        <TextView
            android:id="@+id/txt_view_list_items_qty"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="86dp"
            android:gravity="center"
            android:text="qty" />

        <TextView
            android:id="@+id/txt_view_list_items_price"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="51dp"
            android:gravity="center"
            android:text="price" />

        <TextView
            android:id="@+id/txt_view_list_items_expire_date"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="17dp"
            android:gravity="center"
            android:text="expire date" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>